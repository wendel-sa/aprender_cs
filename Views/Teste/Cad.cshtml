@model Heroi
@{
    ViewData["Title"] = "Cad";
}
<form method="POST">
<div class="row">
    <div class="form-group col-6">
         <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
         <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control"/>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
         <label asp-for="ArmaId"></label>
        <input asp-for="ArmaId" class="form-control"/>
        <span asp-validation-for="ArmaId" class="text-danger"></span>
    </div>

</div>
<button class="btn btn-primary btn-sm col-auto">Cadastrar</button>
</form>