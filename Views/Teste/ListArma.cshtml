@model List<Arma>
@{
    ViewData["Title"] = "Teste Controller";
}
<h1>Armas</h1>
<a asp-action="CadArma" class="btn btn-primary btn-sm my-3">Cadastrar</a>
@if(TempData["CadSucess"] != null){
    <div class="alert alert-success" role="alert">
  Cadastro realizado com sucesso
</div>
}
<table class="table table-striped table-bordered">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th class="text-center">@item.Nome</th>
            </tr>
            <tr>
                 <td>
                     <table class="table table-striped table-bordered">
                        <thead class="text-center">
                            <tr>
                                <td>Model</td>
                            </tr>    
                        </thead>
                        <tbody>
                            @foreach (var Heroi in @item.Heroi)
                            {
                                <tr>
                                    <td class="text-center">@Heroi.ArmaId</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                 </td>
            </tr>
        }
    </tbody>
</table>